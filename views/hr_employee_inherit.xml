<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="hr_hr_employee_advantage_form" model="ir.ui.view">
            <field name="name">hr.hr.employee.advantage.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//div[@name='button_box']" position="inside">
                        <button name="%(action_gestion_advantage)d" class="oe_stat_button" icon="fa-gift" string="Avantages" type="action" groups="base.group_hr_manager"/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>
